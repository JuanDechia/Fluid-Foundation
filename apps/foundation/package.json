{
  "name": "foundation",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build || exit 0",
    "start": "next start",
    "test": "npm run test:start-env && npm run test:int && npm run test:e2e && npm run test:stop-env",
    "test:ci": "npm run test:start-env && npm run test:int && npm run test:e2e",
    "test:start-env": "docker-compose -f docker-compose.test.yml up -d --wait",
    "test:stop-env": "docker-compose -f docker-compose.test.yml down -v",
    "test:int": "vitest run --dir __tests__/integration",
    "test:int:watch": "vitest --dir __tests__/integration",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.7.5",
    "@prisma/client": "^5.10.0",
    "next": "^14.2.35",
    "react": "^18",
    "react-dom": "^18",
    "server-only": "^0.0.1",
    "@next/swc-win32-x64-msvc": "14.2.33"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^4.0.15",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.0",
    "execa": "^8.0.1",
    "prisma": "^5.10.0",
    "svix": "^1.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vitest": "^4.0.15",
    "vitest-tsconfig-paths": "^3.4.1"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}